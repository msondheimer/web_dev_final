<p><%= link_to "Add New Con", "/conventions/new", class: 'btn btn-success pull-center add' %>

<%= link_to "Search Cons", "/conventions/search", class: 'btn btn-success pull-center add'  %></p>

<div class="mel-padding ">

<% @cons.each do |con| %>

	<div>
		<h2> <%= link_to con.name, "/conventions/#{con.id}" %> </h2>
		<h3> <%= "Type: #{con.genre}" %> </h3>
		<p> <%= "From #{con.start.strftime("%B %d, %Y")} to #{con.end.strftime("%B %d, %Y")}" %> </p>
		<p> <%= "Expected Size: #{con.expected_size}" %> </p>
		<p> <%= "Location: #{con.venue}, #{con.city}" %> </p>
	</div>
<% end %>
</div>