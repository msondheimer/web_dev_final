

<div class="mel-padding ">
<h2> 
	<% if @con.end_date > Time.now %>
		<%= link_to "#{@con.name} #{@con.find_year}", @con.con_url %>
	</h2>
	<% else %>
		<%= "#{@con.name} #{@con.start.year}" %>
	</h2>
		<% if Convention.next(@con.name) %>
			<p><%= link_to "Click to see the upcoming #{@con.name}", "/conventions/#{Convention.next(@con.name).id}" %></p>
		<% end %>
	<% end %>


<p> <%= @con.description %> </p>
</div>

<% if @con.start < Time.now %>
	<%= link_to "View photos from con", "/conventions/#{@con.id}/photos", class: 'btn btn-success pull-center add' %>
	<% end %>
	<%= link_to "View all Conventions", "/conventions", class: 'btn btn-success pull-center add' %>


