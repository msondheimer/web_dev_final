<div class="page-header">
  <h1>Search Conventions</h1>
</div>


  <div class="col-md-6">

    <%= form_tag "/conventions/search/results", :method => 'get' do %>

      <div class="form-group">
        <%= label_tag :name, "Name of the Convention" %></br>
        <p class="text-muted">
        <%= text_field_tag :name, "", class: 'form-control', placeholder: 'Convention name' %>
      </p>
      </div>

      <div class="form-group">
        <%= label_tag :genre, "Type" %></br>
        <%= select_tag :genre,  options_for_select([["All", "All"]] + Convention.genre_opts, @genre_name), class: 'form-control' %>
      </div>
       
      <div class-"form-group">
        Within
        <%= label_tag :dist, "" %>
        <p class="text-muted">
        <%= number_field_tag :dist, "", :in => 0..1000, class: 'form-control'%>
        </p>
        miles of 
        <%= label_tag :loc, "" %>
        <p class="text-muted">
        <%= text_field_tag :loc, "", class: 'form-control', placeholder: 'location'%>
      </p>
      </div>

      <div class="form-group">
        Between the dates of 
        <%= label_tag :after, "" %>
        <%= select_date Date.today, prefix: :after, class: 'form-control' %>
        and 
        <%= label_tag :before, "" %>
        <%= select_date Date.today + 1.year, prefix: :before, class: 'form-control' %>

      </div>

      <%= submit_tag 'Search', class: 'btn btn-default' %>
    <% end %>

</div>