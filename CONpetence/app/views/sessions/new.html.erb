<h1>Sign In Here</h1>
<% if flash[:notice] %>
    <div id="notice"><%= flash[:notice] %></div>
<% end %>
<%= form_tag "/sessions" do %>
<div class="form-group">
  <%= label_tag :email %><br/>

  <%= text_field_tag :email, "", placeholder: "Enter your email address" %>
  </div>

<div class="form-group">
  <%= label_tag :password %><br/>
  <%= password_field_tag :password %>
</div>
  
  <%= submit_tag "Login", class: 'btn-success' %>
<% end %>


