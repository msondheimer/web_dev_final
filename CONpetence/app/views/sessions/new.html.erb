<div class="mel-padding ">
<h1>Sign In Here</h1>
<% if flash[:notice] %>
    <div id="notice"><%= flash[:notice] %></div>
<% end %>
<%= form_tag "/sessions" do %>
<div class="form-group">
  <%= label_tag :email %><br/>
  <p class="text-muted">
  <%= text_field_tag :email, "", placeholder: "Enter your email address" %>
</p>
  </div>

<div class="form-group">
  <%= label_tag :password %><br/>
  <p class="text-muted">
  <%= password_field_tag :password %>
</p>
</div>
  
  <%= submit_tag "Login", class: 'btn-success' %>
<% end %>

</br>
<%= link_to 'Back to the home page', root_url %>
</div>


