<h1>Sign Up!</h1>

  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this convention from being saved:</h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>



<%= form_for @user do |f| %>

      <div class="form-group">
        <!-- DISPLAY A TITLE LABEL -->
        <%= f.label "Name"%> <br/>
        <%=f.text_field :name, :placeholder => " Username" %>
        <!-- DISPLAY A TEXT FIELD AND ATTACH THE CLASS OF 'form-control' TO THIS FIELD -->
      </div>
      <div class="form-group">
        <!-- DISPLAY A DESCRIPTION LABEL -->
         <%=f.text_field :email, :placeholder => " email" %>
        <!-- DISPLAY A TEXT FIELD AND ATTACH THE CLASS OF 'form-control' TO THIS FIELD -->
      </div>
      <div class="form-group">
        <!-- DISPLAY A DESCRIPTION LABEL -->
        <%=f.text_field :password, :placeholder => "City, State" %><br/>
        <!-- DISPLAY A TEXT FIELD AND ATTACH THE CLASS OF 'form-control' TO THIS FIELD -->
      </div>
      <div class="form-group">
        <%=f.test_field :password_confirmation, :placeholder => "password_confirmation"%> <br/>
      </div>
      <div class="actions">
      <%=f.submit "Submit" %>
      <!-- DISPLAY A SUBMIT BUTTON WITH A CLASS OF 'btn btn-primary' -->
      </div>

<% end %>
